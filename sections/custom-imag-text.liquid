{%- style -%}
  .optimum-quality {
    padding: 60px 20px;
    display: flex;
    align-items: center;
    gap: 80px;
    max-width: 1440px;
    margin: 0 auto;
  }

  .optimum-quality__image {
    flex: 1;
    border-radius: 20px;
    overflow: hidden;
  }

  .optimum-quality__image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .optimum-quality__content {
    flex: 1;
  }

  .optimum-quality__title {
    font-size: 36px;
    font-weight: bold;
    margin-bottom: 40px;
    color: white;
  }

  .optimum-quality__features {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .optimum-quality__feature {
    display: flex;
    gap: 15px;
  }

  .optimum-quality__feature-icon {
    width: 44px;
    height: 44px;
    flex-shrink: 0;
  }

  .optimum-quality__feature-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .optimum-quality__feature-text h3 {
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 8px;
    color: white;
  }

  .optimum-quality__feature-text p {
    font-size: 14px;
    color: #666;
    margin: 0;
    color: white;
  }

  .optimum-quality__button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: #d2ab67;
    color: white;
    padding: 12px 24px;
    border-radius: 5px;
    text-decoration: none;
    margin-top: 30px;
    transition: background 0.3s;
    font-weight: bold;
  }

  .optimum-quality__button:hover {
    fill: black;
    background: #ffff;
    color: #000;
  }
  .optimum-quality__button:hover path {
    fill: black;
  }
  @media screen and (max-width: 768px) {
    .optimum-quality {
      flex-direction: column;
    }

    .optimum-quality__image,
    .optimum-quality__content {
      width: 100%;
    }
  }
{%- endstyle -%}

<div class="optimum-quality">
  <div class="optimum-quality__image">
    <img
      src="{{ section.settings.main_image | img_url: 'master' }}"
      alt="{{ section.settings.main_image.alt | escape }}"
      loading="lazy"
      width="{{ section.settings.main_image.width }}"
      height="{{ section.settings.main_image.height }}"
    >
  </div>

  <div class="optimum-quality__content">
    <h2 class="optimum-quality__title">{{ section.settings.title }}</h2>

    <div class="optimum-quality__features">
      {% for block in section.blocks %}
        <div class="optimum-quality__feature">
          <div class="optimum-quality__feature-icon">
            <img
              src="{{ block.settings.icon | img_url: 'small' }}"
              alt="{{ block.settings.heading | escape }}"
              loading="lazy"
              width="24"
              height="24"
            >
          </div>
          <div class="optimum-quality__feature-text">
            <h3>{{ block.settings.heading }}</h3>
            <p>{{ block.settings.text }}</p>
          </div>
        </div>
      {% endfor %}
    </div>

    <a href="{{ section.settings.button_link }}" class="optimum-quality__button">
      {{ section.settings.button_text }}
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 4L10.59 5.41L16.17 11H4V13H16.17L10.59 18.59L12 20L20 12L12 4Z" fill="currentColor"/>
      </svg>
    </a>
  </div>
</div>

{% schema %}
{
  "name": "Optimum Quality",
  "settings": [
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "OPTIMUM QUALITY"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Feature Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "HIGH QUALITY MATERIALS"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Praesent in aliquam sed malesuada sollicitudin dia. Nulla eras condimentum"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Optimum Quality",
      "category": "Custom",
      "blocks": [
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        }
      ]
    }
  ]
}
{% endschema %}
